@model IEnumerable<RegistrationAndLogin.Models.Order>

@{
    ViewBag.Title = "AllOrders";
}

<h2>AllOrders</h2>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.personname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.orderitems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalammount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ordertime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.personname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderitems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalammount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ordertime)
            </td>
            <td>
                @Html.ActionLink("Cancel Order", "DeleteOrder", new { id = item.id }, new { onclick = "return confirm('are you sure want to cancel order ?')" })
            </td>
        </tr>
    }
        </tbody>
</table>

@section scripts {
    <script>

            $(document).ready(function () {
                $('#example').DataTable();
            });
    </script>
}
